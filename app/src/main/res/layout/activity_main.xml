<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="150dp"
        android:orientation="vertical"
        android:background="?attr/error_background_color"
        android:padding="48dp">

        <TextView
            android:id="@+id/title"
            style="@style/Widget.Sprint9.Title.20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ошибка" />

        <TextView
            android:id="@+id/description"
            style="@style/Widget.Sprint9.Description.18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Нет интернета" />

        <Button
            android:id="@+id/retry"
            style="@style/Widget.Sprint9.ButtonRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retry" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_error"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_1"
            style="@style/Widget.Sprint9.ButtonRetry"
            android:theme="@style/Theme.Sprint9koh9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"/>

        <Button
            android:id="@+id/btn_2"
            style="@style/Widget.Sprint9.ButtonRetry"
            android:theme="@style/Theme.Sprint9koh9.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2"/>

    </LinearLayout>

</LinearLayout>